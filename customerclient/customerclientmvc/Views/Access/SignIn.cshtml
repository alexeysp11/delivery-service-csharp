@model DeliveryService.Models.Authentication.SignInModel;
@{
    ViewData["Title"] = "Sign in Page";
}

<div class="text-center">
    <h1 class="display-4">Sign in</h1>
    <div style="display: inline-block; text-align: left;">
        <form asp-controller="Access" asp-action="SignIn" method="post">
            <div class="form-group" style="margin-top: 5px; width: 500px;">
                <input type="text" class="form-control" placeholder="Login" asp-for="Login">
            </div>
            <div class="form-group" style="margin-top: 5px; width: 500px;">
                <input type="password" class="form-control" placeholder="Password" asp-for="Password">
            </div>
            <div class="form-check" style="margin-top: 5px; width: 500px;">
                <input type="checkbox" class="form-check-input" id="checkboxKeepMeLoggedIn" asp-for="KeepLoggedIn">
                <label class="form-check-label" for="checkboxKeepMeLoggedIn">Keep me logged in.</label>
            </div>
            <button type="submit" class="btn btn-primary" style="margin-top: 5px; width: 200px;">Sign in</button>
            <div>
                <a asp-area="" asp-controller="Access" asp-action="SignUp">Don't have an account?</a>
            </div>

            @if (ViewData["ValidationMessage"] != null)
            {
                <br />
                <br />
                <label>@ViewData["ValidationMessage"]</label>
            }
        </form>
    </div>
</div>
