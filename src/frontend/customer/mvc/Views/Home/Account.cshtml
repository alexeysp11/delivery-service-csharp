@{
    ViewData["Title"] = "Account";
}

<div class="text-center">
    <h1 class="display-4">Account</h1>
</div>

<div>
    <form>
        <div class="form-group row">
            <label for="staticLogin" class="col-sm-2 col-form-label">Login</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="staticLogin" value=@ViewData["login"]>
            </div>
        </div>
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="staticEmail" value=@ViewData["email"]>
            </div>
        </div>
        <div class="form-group row">
            <label for="staticEmail" class="col-sm-2 col-form-label">Phone number</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="staticEmail" value=@ViewData["phone_number"]>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword" placeholder="Password">
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 5px; width: 200px;">Save changes</button>
    </form>
</div>
